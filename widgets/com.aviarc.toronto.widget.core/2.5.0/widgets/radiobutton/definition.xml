<widget name="radiobutton" 
    factory-class="com.aviarc.framework.toronto.widget.DefaultWidgetProviderFactoryImpl"
    container-positioning="y"
    element-validator-class="com.aviarc.framework.toronto.widget.validation.ContainerPositioningElementValidator">
    <attributes>
        <attribute name="name" type="name" mandatory="n"/>
        <attribute name="selection-field" mandatory="y" type="field"/>
        <attribute name="checked-value" mandatory="y"/>
        <attribute name="group" mandatory="n"/>
        <attribute name="enabled" mandatory="n" type="bool" default="y"/>
        <attribute name="height" mandatory="n" default="13"/>
        <attribute name="width" mandatory="n" default="13"/>
    </attributes>
    <includes>
      <js-include file="RadioButton.js"/>
      <css-include file="radiobutton.css"/>
	  <msie6-css-include file="ie6-radiobutton.css"/>
    </includes>
    <js-constructor>new YAHOO.com.aviarc.framework.toronto.widget.core.v2_5_0.RadioButton()</js-constructor>
</widget>
